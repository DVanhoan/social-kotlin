<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <!-- Màu nền trong suốt hoặc bất kỳ màu nào bạn muốn -->
    <solid android:color="@android:color/transparent" />

    <!-- Độ dày và màu viền -->
    <stroke
        android:width="2dp"
        android:color="@color/white" />

    <!-- Padding bên trong (để icon không bị sát viền quá) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
